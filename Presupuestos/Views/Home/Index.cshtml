@{
    ViewBag.Title = "Home Page";
}

<div class="col-lg-12">
    <div class="text-center">
        <h1 style="color:#808080">Plataforma de Presupuestos y Proyecciones de Grupo Vargas S.A.</h1>
    </div> 
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Dashboard</h2>
